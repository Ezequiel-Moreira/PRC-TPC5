extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-teal
        h1 Query making
        p 
          a="Currently questioning repository with id "
          a=identity

      .w3-container
        .w3-row
          .w3-col.w3-padding
            .w3-container.w3-border.w3-light-grey
              header.w3-container
                h4 Input your query 
              form.w3-container(method='POST' action=identity)
                textarea.w3-input.w3-border(rows="10" cols="50" placeholder="Query here..." name="intext" id="intext") 
                p Choose the output format of your query
                select.w3-input.w3-select(name="selection") 
                  option.w3-input(value="json" selected) JSON
                  option.w3-input(value="xml") XML
                input.w3-btn.w3-teal(type='submit' value='Enviar')

      footer.w3-container.w3-teal
        adress Criado por Ezequiel Moreira
        .w3-container
          w3-btn.w3-green
            a(href="http://localhost:3000/") Menu principal
